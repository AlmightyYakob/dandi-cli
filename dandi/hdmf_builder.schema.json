{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "hdmf_builder.schema.json",
  "title": "HDMF Builder meta-data",
  "description": "A schema for validating JSON files extracted from HDMF Builders, used for extracting meta-data from NWB files",
  "version": "0.1.0",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "attributes": {"type": "object"},
    "groups": {"$ref": "#/definitions/groups"},
    "datasets": {"$ref": "#/definitions/datasets"}
    },
  "definitions": {
    "groups": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "attributes": {"$ref": "#/definitions/attributes"},
            "groups": {"$ref": "#/definitions/groups"},
            "datasets": {"$ref": "#/definitions/datasets"}
            }
          }
        }
      },
  "datasets": {
    "type": "object",
    "additionalProperties": false,
    "patternProperties": {
      "^.*$": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "attributes": {"$ref": "#/definitions/attributes"},
          "data": {"$ref":  "#/definitions/data"}
          }
        }
      }
    },
  "attributes": {
    "description": "attributes should be a dictionary where all of the values are strings",
    "type": "object",
    "additionalProperties": false,
    "patternProperties": {
      "^.*$": {
        "$ref":  "#/definitions/data_values"}
      }
    },
    "data": {
      "description": "can be 1) string, 2) number, 3) array of strings 4) array of numbers 5) Zarr dataset metadata 6) link ",
      "anyOf": [
        {"$ref":  "#/definitions/data_values"},
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "shape",
            "dtype"
          ],
          "properties": {
            "shape": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "dtype": {
              "type": "string"
            },
            "compression": {
              "type": "object",
              "properties": {
                "id": {"type": "string"},
                "cname": {"type": "string"},
                "clevel": {"type": "integer"},
                "shuffle": {"type": "string"}
              }
            },
            "fillvalue": {
              "type": "number"
            },
            "chunks": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          }
        },
        {
          "description": "dataset link",
          "type": "object",
          "properties": {
            "type": {"const": "link"},
            "object_id": {"type": "string"}
          }
        }
      ]
    },
    "data_values": {
      "anyOf": [
        {"type": "string"},
        {"type": "number"},
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      ]
    }
  }
}